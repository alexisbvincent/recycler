<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:weightSum="3">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/common_google_signin_btn_text_dark_default"
        app:tabTextColor="@android:color/white">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recycle" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trash" />
    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/imgB_plastic"
            android:layout_width="169dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/plastic" />


        <ImageButton
            android:id="@+id/imgB_paper"
            android:layout_width="161dp"
            android:layout_height="181dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/paper" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">


        <ImageButton
            android:id="@+id/imgB_aluminum"
            android:layout_width="144dp"
            android:layout_height="171dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/aluminium" />

        <ImageButton
            android:id="@+id/imgB_landfill"
            android:layout_width="125dp"
            android:layout_height="174dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/landfill" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_menu_camera" />


</LinearLayout>